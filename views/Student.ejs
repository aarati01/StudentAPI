<!DOCTYPE html>
<html lang="en">
  <head>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta charset="utf-8" />
    <title>Student Management - Show Students</title>
    <style>
      body {
        font-family: Arial, sans-serif;
        margin: 0;
        padding: 0;
        background-color: #f9f9f9;
      }

      h1 {
        text-align: center;
        color: #4caf50;
      }

      section {
        margin: 20px;
        padding: 10px;
      }

      main {
        text-align: center;
        margin: 30px auto;
      }

      label,
      input,
      button {
        font-size: 1.2rem;
      }

      footer {
        text-align: center;
        margin-top: 50px;
        padding: 10px;
        background: #333;
        color: white;
        font-size: 0.9rem;
      }
    </style>
  </head>
  <body>
    <h1>Student Management - Show Students</h1>

    <section data-position="studentList">
      <% for(var i = 0; i < alltheStudent.length; i++) { %>
      <strong>Student ID:</strong> <%= alltheStudent[i].id %> <br />
      <strong>First Name:</strong> <%= alltheStudent[i].f_name %> <br />
      <strong>Last Name:</strong> <%= alltheStudent[i].l_name %> <br />
      <strong>Semester:</strong> <%= alltheStudent[i].semester %> <br />
      <hr />
      <% } %>
    </section>

    <main>
      <form action="/studentList" method="GET">
        <label for="studentID">Student ID: </label>
        <input
          type="text"
          id="studentID"
          name="studentID"
          placeholder="Enter Student ID"
        /><br /><br />

        <button type="submit">Search Student</button><br /><br />
      </form>
    </main>

    <footer>&copy; 2024 Designed by Aarati Thapa</footer>
  </body>
</html>
